<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿一覧
      </h1>
    </div>
  </div>
</section>

    <div class="columns is-vcentered"  style="background-color: #CCFFCC">
      
      <div class="column">
        <div>
        <%= search_form_for @search do |f| %>
        <%= f.label :title_cont, "メニュー名", class: "label" %>
        </div>
        <div class="is-primary">
          <%= f.text_field :title_cont, class: "input" %>
        </div>
      </div>
      <div class="column">
        <%= f.label :shopname_cont, "店名", class: "label" %>
        <div class="is-primary">
          <%= f.text_field :shopname_cont, class: "input" %>
        </div>
      </div>
      <div class="column">
        <%= f.label :place_cont, "場所", class: "label" %>
